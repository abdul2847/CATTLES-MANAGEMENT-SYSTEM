<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roddan Development Foundation</title>
    <link rel="stylesheet" href="/css/main.css">

    <%- include('./layouts/headers') %>
</head>

<body>
    <div class="body_wrapper">

            <%- include('./layouts/sidebar') %>
        <div class="main-wrapper">

                <%- include('./layouts/top_nav') %>
    
            <div class="container_wrapper gap-10 col pd-inl-15 ">
                <div class="card form-group-card shadow_dark   width-100 rounded-10 pd-30 ">
                    <form action="/manager/add/manager" method="post" enctype="multipart/form-data">
                        <div class="card width-100 col gap-20 ">
                            <%- include('./messages') %>
                            <h2 class="center letter-spc-2">ADD MANAGER</h2>
                            <br>
                            <div class="form-group row  flex-wrap gap-10   ">
                                <div class="group_inputs gap-5 col">
                                    <label for="name">Full Name : </label>
                                    <input type="text" name="name" id="" class=" pd-15 rounded-5 input-border"
                                        placeholder="Full Name">
                                </div>
                                <div class="group_inputs gap-5 col">
                                    <label for="Email">Email : </label>
                                    <input type="text" name="email" id="" class=" pd-15 rounded-5 input-border" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row  flex-wrap gap-10 ">
                                <div class="group_inputs gap-5 col">
                                    <label for="location">Location :</label>
                                    <input type="text" name="location" id="" class=" pd-15 rounded-5 input-border"
                                        placeholder="Location">
                                </div>
                                <div class="group_inputs gap-5 col">
                                    <label for="house_Address">Current House Address :</label>
                                    <input type="text" name="house_Address" id="" class=" pd-15 rounded-5 input-border" placeholder="House Address">
                                </div>
                            </div>
                            <div class="form-group row  flex-wrap gap-10  ">
                                <div class="group_inputs gap-5 col">
                                    <label for="phone">Phone :</label>
                                    <input type="text" name="phone" id="" class=" pd-15 rounded-5 input-border"
                                        placeholder="Contact" >
                                </div>
                                <div class="group_inputs gap-5 col">
                                    <label for="password">Password : </label>
                                    <input type="password" name="password" id="" class=" pd-15 rounded-5 input-border" placeholder="Password" minlength="6" maxlength="16" >
                                    <p style="font-size: 10px; font-weight: 100;">Minimum character: 6</p>
                                </div>
                            </div>
                            <div class="form-group row flex-wrap gap-10">
                                <div class="group_inputs gap-5 col">
                                    <label for="gender">Gender :</label>
                                    <select name="gender" id="" class=" pd-15 rounded-5 input-border">
                                        <option >select gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                </div>
                                <div class="group_inputs gap-5 col">
                                    <label for="image">Upload profile</label>
                                    <input type="file" name="image" class=" pd-15 rounded-5 input-border">
                                </div>
                            </div>
                            <div class="form-group row gap-10 flex-wrap center">
                                <button class="prim_btn_color width-100 pd-15 rounded-5 input-border">Submit</button>
                            </div>
                           
                        </div>
                    </form>
                    
                </div>
                <br>
            </div>
        </div>


        <script src="/js/dashboard.js"></script>
        <script src="/js/sidebar.js"></script>


</body>

</html>