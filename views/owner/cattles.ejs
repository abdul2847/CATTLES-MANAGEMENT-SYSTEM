<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roddan Development Foundation</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="body_wrapper">
      <%- include('./layouts/sidebar') %>
        <div class="main-wrapper">
            <%- include('./layouts/top_nav') %>
            <div class="container_wrapper gap-10 col pd-inl-15 ">
                <div class="owner_container card shadow_dark height-100 width-100 rounded-10 pd-30 ">
                    <div class="headline width-100 row space-between pd-10">
                        <h2 class="letter-spc-2 h2 ">CATTLES</h2>
                        <a href="/owner/cattles" class="logout pd-10 rounded-5"> Add Cattle</a>
                    </div>
                    <br>
                    <div class="card_container row gap-20 flex-wrap pd-10">
                        <% if (cattles && cattles.length > 0) { %>
                            <% cattles.forEach((cattle) => { %>
                                <div class="owner_card rounded-10 fle shadow_ligth col ">
                                    <div class="owner_img">
                                        <img src="/uploads/cattles/<%= cattle.images %>" alt="">
                                    </div>
                                    <div class="owner_descrip pd-10 gap-10 col">
                                        <p>Owner: <%= cattle.owner.name  %></p>
                                        <p>Location: <%= cattle.owner.location  %></p>
                                        <p>Color: <%= cattle.color  %></p>
                                        <p>Health Status: <%= cattle.healthStatus  %></p>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <h3>No Cattles found</h3>
                        <% } %>
                    </div>
                    <br>
                    <br>
                      
                    <div class="pargination center row gap-20">
                        <% if (currentPage > 1) { %>
                            <a href="/manager/cattles/?page=<%= currentPage - 1 %>" class="width-20 pd-10 prim_btn_color rounded-20">Previous</a>
                            <% } %>
                            <p><%= currentPage%></p>
                            <% if (currentPage < totalPages) { %>
                            <a href="/manager/cattles/?page=<%= currentPage + 1 %>"class="width-20 pd-10 prim_btn_color rounded-20" >Next</a>
                            <% } %>
                       
                        
                    </div>

                </div>

                <div class="footer height-20 width-100">
                    <p>@hafis</p>
                </div>
            </div>
        </div>


        <script src="/js/dashboard.js"></script>


</body>

</html>